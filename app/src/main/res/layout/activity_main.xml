<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/grid_layout"
    android:layout_marginRight="@dimen/grid_layout"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="4"
    tools:context="com.example.mlfan.tipcalculator.MainActivity">

    <EditText
        android:id="@+id/edtAmountBill"
        style="@style/InputStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:hint="@string/amount_bill_hint"
        android:inputType="numberDecimal"
        android:layout_marginLeft="33dp"/>

    <TextView
        android:id="@+id/txtDollarSign"
        style="@style/TextStyle"
        android:layout_row="0"
        android:layout_column="0"
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtTipLabel"
        style="@style/LabelStyle"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/column0"
        android:layout_column="0"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd" />

    <SeekBar
        android:id="@+id/sbSeekBar"
        android:layout_width="@dimen/column1"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_row="1" />

    <TextView
        android:id="@+id/txtLabelTipAmount"
        style="@style/LabelStyle"
        android:layout_column="0"
        android:layout_width="@dimen/column0"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:text="@string/label_tip"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/txtTipAmount"
        android:layout_column="1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:layout_width="@dimen/column1"
        android:layout_height="wrap_content"
        android:text="@string/value_preview"
        style="@style/OutputStyle"/>

    <TextView
        android:id="@+id/txtLabelTotalAmount"
        style="@style/LabelStyle"
        android:layout_column="0"
        android:layout_width="@dimen/column0"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="3"
        android:text="@string/label_total"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/txtTotalAmount"
        style="@style/OutputStyle"
        android:layout_column="1"
        android:layout_marginTop="20dp"
        android:layout_row="3"
        android:layout_width="@dimen/column1"
        android:layout_height="wrap_content"
        android:text="@string/value_preview"/>

</GridLayout>
